---
const APP_NAME = "SmartAlertPlusTT";
const tagline = "Community-ready SOS alerts that are fast, clear, and privacy-first.";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{APP_NAME}</title>

    <style>
      :root {
        color-scheme: dark;
        --bg: #070a10;
        --panel: rgba(255, 255, 255, 0.04);
        --panel2: rgba(255, 255, 255, 0.06);
        --border: rgba(255, 255, 255, 0.10);
        --text: #eaf0ff;
        --muted: rgba(234, 240, 255, 0.72);
        --accent: #7be0d6;
        --accent2: #8aa7ff;
        --shadow: 0 30px 90px rgba(0, 0, 0, 0.55);
        --radius: 22px;
        --radius2: 999px;
      }

      * { box-sizing: border-box; }
      body {
        margin: 0;
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
        background:
          radial-gradient(1200px 800px at 50% -10%, rgba(138,167,255,0.20), transparent 60%),
          radial-gradient(900px 700px at 20% 15%, rgba(123,224,214,0.18), transparent 55%),
          radial-gradient(800px 600px at 85% 30%, rgba(123,224,214,0.10), transparent 55%),
          var(--bg);
        color: var(--text);
      }

      a { color: inherit; text-decoration: none; }
      .wrap { max-width: 1100px; margin: 0 auto; padding: 22px 18px 70px; }

      .topbar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 14px;
      }

      .brand {
        display: flex;
        align-items: center;
        gap: 10px;
        font-weight: 850;
      }

      .logoDot {
        width: 12px;
        height: 12px;
        border-radius: 999px;
        background: linear-gradient(135deg, var(--accent), var(--accent2));
      }

      .navPills {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
      }

      .pill {
        padding: 9px 13px;
        border-radius: var(--radius2);
        border: 1px solid var(--border);
        background: rgba(255,255,255,0.03);
        font-size: 13px;
      }

      .pill.primary {
        border: none;
        background: linear-gradient(135deg, var(--accent), var(--accent2));
        color: #071015;
        font-weight: 700;
      }

      .hero {
        margin-top: 18px;
        border-radius: 30px;
        border: 1px solid var(--border);
        background: rgba(255,255,255,0.03);
        overflow: hidden;
      }

      .heroInner {
        padding: 32px 22px;
        display: grid;
        grid-template-columns: 1.1fr 0.9fr;
        gap: 18px;
      }

      @media (max-width: 900px) {
        .heroInner { grid-template-columns: 1fr; }
      }

      h1 {
        margin: 0 0 10px;
        font-size: 42px;
      }

      .sub {
        color: var(--muted);
        max-width: 60ch;
      }

      .ctaRow {
        margin-top: 14px;
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
      }

      .mediaCard {
        border-radius: 22px;
        border: 1px solid rgba(255,255,255,0.12);
        background: rgba(0,0,0,0.20);
        overflow: hidden;
      }

      .mediaBody {
        padding: 16px;
      }

      .phoneFrame {
        height: 360px;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .heroShot {
        width: 82%;
        height: 86%;
        border-radius: 18px;
        border: 1px solid rgba(255,255,255,0.12);
        object-fit: cover;
      }

      .carousel {
        margin-top: 14px;
        border-radius: 22px;
        border: 1px solid rgba(255,255,255,0.10);
        background: rgba(0,0,0,0.18);
      }

      .track {
        display: flex;
        gap: 12px;
        overflow-x: auto;
        scroll-snap-type: x mandatory;
        padding: 14px;
      }

      .slide {
        flex: 0 0 78%;
        scroll-snap-align: center;
        border-radius: 18px;
        border: 1px solid rgba(255,255,255,0.12);
        overflow: hidden;
        min-height: 220px;
      }

      .slide img {
        width: 100%;
        height: auto;
        object-fit: contain;
        display: block;
      }

      .slideCap {
        padding: 10px;
        font-size: 13px;
        color: var(--muted);
        background: rgba(255,255,255,0.03);
      }
    </style>
  </head>

  <body>
    <div class="wrap">
      <div class="topbar">
        <div class="brand">
          <span class="logoDot"></span>
          <span>{APP_NAME}</span>
        </div>
        <div class="navPills">
          <a class="pill" href="#how">How it works</a>
          <a class="pill" href="#install">Install</a>
          <a class="pill" href="#support">Support</a>
          <a class="pill primary" href="#get-app">Get the App</a>
        </div>
      </div>

      <section class="hero">
        <div class="heroInner">
          <div>
            <h1>{tagline}</h1>
            <p class="sub">
              SmartAlertPlusTT helps communities share urgent SOS alerts quickly and clearly â€”
              designed to be calm under stress and respectful of privacy.
            </p>
            <div class="ctaRow">
              <a class="pill primary" href="#install">Watch Install Guide</a>
              <a class="pill" href="#how">See How It Works</a>
            </div>
          </div>

          <div class="mediaCard">
            <div class="mediaBody">
              <div class="phoneFrame">
                <img class="heroShot" src="/screenshots/21.png" alt="SmartAlertPlusTT home screen"></img>
              </div>
            </div>
          </div>
        </div>
      </section>

      <section class="carousel">
        <div class="track">
          <div class="slide">
            <img src="/screenshots/16.png" alt="Setup step 1"></img>
            <div class="slideCap">Enter your details once.</div>
          </div>
          <div class="slide">
            <img src="/screenshots/17.png" alt="Setup step 2"></img>
            <div class="slideCap">Add emergency contacts.</div>
          </div>
          <div class="slide">
            <img src="/screenshots/20.png" alt="Permissions center"></img>
            <div class="slideCap">Fix permissions calmly.</div>
          </div>
        </div>
      </section>

    </div>
  </body>
</html>

